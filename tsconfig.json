{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language & Environment */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type Safety */
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Output */
    "sourceMap": true,

    /* Performance */
    "skipLibCheck": true
  }
}
